# Server
NODE_ENV=development
PORT=5050

# MongoDB
MONGODB_URI=mongodb://localhost:27017/cartoonify

# URLs
# Used to build absolute URLs returned to the frontend (important when API is hosted externally)
PUBLIC_BASE_URL=http://localhost:5050

# Comma-separated allowed origins (React dev server, WordPress domain, etc.)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Upload settings
UPLOAD_FIELD_NAME=image
MAX_FILE_SIZE_BYTES=5242880
UPLOAD_DIR=uploads
PROCESSED_DIR=processed

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30
